>>> from chatbot.button import WebUrlButton
>>> from chatbot.button import PostbackButton
>>> from chatbot.template import ButtonTemplate
>>> from chatbot.attachment import TemplateAttachment
>>> web_button = WebUrlButton(title='Show website',url='https://petersapparel.parseapp.com')
>>> postback_button = PostbackButton(title='Start chatting',payload='USER_DEFINED_PAYLOAD')
>>> template = ButtonTemplate(text='What do you want to do next?', buttons=[ web_button, postback_button ] )
>>> attachment = TemplateAttachment(template=template)
